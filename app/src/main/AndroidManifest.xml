<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão para acesso à internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrimeiraDe24_2"
        tools:targetApi="31">

        <!-- Tela 1: MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela 2: CadastroActivity (Registro da tela de cadastro) -->
        <activity
            android:name=".CadastroActivity"
            android:exported="false" />

        <!-- Tela 3: Tela3Activity (Registro da tela de login) -->
        <activity
            android:name=".Tela3Activity"
            android:exported="false" />

        <!-- Tela 4: Tela4Activity (Registro da tela de boas-vindas) -->
        <activity
            android:name=".Tela4Activity"
            android:exported="false" />

        <!-- Activity2 (caso necessária) -->
        <activity
            android:name=".Activity2"
            android:exported="false" />

    </application>

</manifest>
